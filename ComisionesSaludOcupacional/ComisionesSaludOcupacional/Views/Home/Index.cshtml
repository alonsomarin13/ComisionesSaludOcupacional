@model ComisionesSaludOcupacional.Models.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Página Principal";
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}

<br />

<div class="jumbotron">
    @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { role = "form", @class = "form-group" }))
    {

    <div class="myBox">
        <div class="row">
            <div class="col-sm">
                @Html.AntiForgeryToken()

                @Html.ValidationMessage("error", new { @class = "text-danger" })

                @Html.LabelFor(d => d.username)
                @Html.TextBoxFor(d => d.username, new { @class = "form-control" })
                @Html.ValidationMessage("username", new { @class = "text-danger" }) <hr class="my-4">

                @Html.LabelFor(d => d.contrasena)
                @Html.PasswordFor(d => d.contrasena, new { @class = "form-control" })
                @Html.ValidationMessage("contrasena", new { @class = "text-danger" }) <hr class="my-4">
            </div>
        </div>
        <div class="col-sm">
            <div style="text-align:right">
                <input type="submit" class="btn btn-success btn-lg" value="Iniciar Sesión" />
            </div>
        </div>
    </div>
    }
</div>
    
