@model ComisionesSaludOcupacional.Models.ViewModels.VerNoticiaViewModel
@{
    ViewBag.Title = "Ver Noticia";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h4 class="display-3">@Model.titulo</h4>

<div class="myBox">
    <div class="row">
        @if (Model.texto != null)
        {
            <div class="col-sm">
                <p>@Html.Raw(Model.texto.Replace("\n", "<br />"))</p>
            </div>
        }
    </div>

    @if (ViewBag.Mensaje != null)
    {
        <div class="row">
            <div class="col-sm">
                <input type="button" onclick="document.location.href='@Url.Content("~/AdminNoticia/Descargar/" + Model.archivo.idArchivo)'" value="Descargar Archivo" class="btn btn-sm btn-primary" />
                <p>@Model.archivo.nombre</p>
            </div>
        </div>

        if (Model.archivo.tipo == "application/pdf")
        {
            <iframe src="@Url.Content(Model.archivo.filePath)" height="700" width="500"></iframe>
        }

        if (Model.archivo.tipo == "image/jpeg" || Model.archivo.tipo == "image/png")
        {
            <img src="@Url.Content(Model.archivo.filePath)" alt="Image" style="height:500px;width:500px;"/>
        }

    }

    <div class="row">
        <div class="col-sm">
            <div style="text-align:left">
                <input onclick="history.back()" type="button" class="btn btn-danger btn-lg" value="Atrás" />
            </div>
        </div>
        <div class="col-sm">
            <div style="text-align:center">
                <input onclick="document.location.href='@Url.Content("~/AdminNoticia/EditarNoticia/" + Model.idNoticia)'" type="button" value="Editar" class="btn btn-outline-warning" />
            </div>
        </div>
        <div class="col-sm">
            <div style="text-align:center">
                <input onclick="document.location.href='@Url.Content("~/AdminNoticia/BorrarNoticia/" + Model.idNoticia)'" type="button" value="Borrar" class="btn btn-danger" />
            </div>
        </div>
    </div>
</div>
