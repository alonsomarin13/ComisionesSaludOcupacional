<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CSO - MSP</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/jquery-ui.css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~">

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand">MSP</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor02">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" onclick="document.location.href='@Url.Content("~/AdminComision")'">Comisiones</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" onclick="document.location.href='@Url.Content("~/AdminComision/Add/")'">Añadir Comisión</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" onclick="document.location.href='@Url.Content("~/Home/")'">Salir</a>
                </li>
            </ul>
        </div>
    </nav>
    

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Proyecto de Ing. de Software - TEC</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/jquery-ui.js")
    @Scripts.Render("~/Scripts/DatePickerReady.js")
    @RenderSection("scripts", required: false)
</body>
</html>
