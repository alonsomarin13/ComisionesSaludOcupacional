@model List<ComisionesSaludOcupacional.Models.ViewModels.CentroDeTrabajoTableViewModel>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Index";
}

<br>


<h1 class="display-3">Centros de Trabajo</h1>

<div class="myBox-adjustable">
    @using (Html.BeginForm("Index", "AdminCentroDeTrabajo", FormMethod.Get))
    {
        @Html.Label("Nombre")
        @Html.TextBox("nombre", null, new { @class = "form-control-filter" })

        @Html.Label("Region")
        @Html.DropDownList("region", (SelectList)ViewBag.Regiones, "Seleccione Región", new { @class = "custom-select-filter" })

        <input type="submit" value="Buscar" />
    }
</div>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered">
            <tr class="table-primary">
                <th>Nombre</th>
                <th>Region</th>
                <th> </th>
            </tr>

            @foreach (var oObjeto in Model)
            {
                <tr>
                    <td>@oObjeto.nombre</td>
                    <td>@oObjeto.nombreRegion</td>
                    <td><input onclick="document.location.href='@Url.Content("~/AdminCentroDeTrabajo/EditCentroDeTrabajo/" + oObjeto.idCentroDeTrabajo)'" type="button" value="Editar" class="btn btn-primary" /></td>
                </tr>
            }
        </table>
    </div>
</div>
<div class="col-md-12" style="text-align:right;">
    <input type="button" onclick="document.location.href='@Url.Content("~/AdminCentroDeTrabajo/AddCentroDeTrabajo")'" value="Crear nuevo Centro de Trabajo" class="btn btn-lg btn-success" />
</div>
