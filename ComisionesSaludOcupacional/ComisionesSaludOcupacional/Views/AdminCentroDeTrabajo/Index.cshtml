@model List<ComisionesSaludOcupacional.Models.ViewModels.CentroDeTrabajoTableViewModel>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Index";
}

<br>


<h1 class="display-3">Centros de Trabajo</h1>


<div class="myBox-adjustable">
    <div class="row">


        <div class="col-8" align="left">
            @using (Html.BeginForm("Index", "AdminCentroDeTrabajo", FormMethod.Get))
            {
                @Html.Label("Nombre")
                @Html.TextBox("nombre", null, new { @class = "form-control-filter" })

                @Html.Label("Region")
                @Html.DropDownList("region", (SelectList)ViewBag.Regiones, "Seleccione Región", new { @class = "custom-select-filter" })

                <input type="submit" value="Buscar" class="btn btn-sm btn-secondary" />
            }
        </div>

        <div class="col" align="right">
            <input type="button" onclick="document.location.href='@Url.Content("~/AdminCentroDeTrabajo/AddCentroDeTrabajo")'" value="Crear nuevo Centro de Trabajo" class="btn btn-sm btn-primary" />
        </div>
    </div>

    
</div>
<div class="row">
    <div class="col-lg-12">
        <div style="height:400px; overflow-y:auto;">
            <table class="table table-bordered">
                <tr class="table-primary">
                    <th>Nombre</th>
                    <th>Region</th>
                    <th> </th>
                </tr>

                @foreach (var oObjeto in Model)
                {
                    <tr>
                        <td>@oObjeto.nombre</td>
                        <td>@oObjeto.nombreRegion</td>
                        <td><input onclick="document.location.href='@Url.Content("~/AdminCentroDeTrabajo/EditCentroDeTrabajo/" + oObjeto.idCentroDeTrabajo)'" type="button" value="Editar" class="btn btn-warning" /></td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

